<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="30.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textSize="25sp"
        android:textColor="@color/text_2A2A"
        android:layout_marginTop="48dp"/>

    <TextView
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30.5dp"
        android:layout_marginTop="20dp"
        android:text="@string/app_name"
        android:textColor="@color/text_2323"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_login" />
    <LinearLayout
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="8.14dp"
        android:layout_marginRight="31dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.14dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/ll_ty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_select"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/click_item_sel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="同意"
                    android:textColor="@color/text_D4"
                    android:textSize="11dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_yhxy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户许可协议》"
                android:textColor="@color/color_387CF0"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_yszy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《隐私保护指引》"
                android:textColor="@color/color_387CF0"
                android:textSize="11dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wx_login"
            android:layout_width="231dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_radius_5_bg_4428"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_login_wx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="微信登录"
                android:textColor="@color/white"
                android:textSize="17dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/qq_login"
            android:layout_width="231dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_radius_5_bg_8c2c"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_login_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="QQ登录"
                android:textColor="@color/white"
                android:textSize="17dp" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>