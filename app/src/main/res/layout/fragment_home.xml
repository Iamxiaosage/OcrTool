<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
<!--    android:paddingBottom="@dimen/activity_vertical_margin"-->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/result_pop_scroll"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:fadingEdge="vertical"
        android:scrollbars="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="7dp"
                android:paddingLeft="20dp"
                android:text="常用服务"
                android:textColor="#ff363636"
                android:textSize="20sp" />

            <TableLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <TableRow>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/general_basic_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/ic_general_basic_ocr"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="通用文字识别"
                            android:textColor="#363636"
                            android:textSize="14sp"></TextView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/handwritting_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/ic_handwring_ocr"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="手写识别"
                            android:textColor="#363636"
                            android:textSize="14sp"></TextView>
                    </LinearLayout>
                </TableRow>


                <TableRow>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <ImageView

                            android:id="@+id/idcard_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/ic_id_card_ocr"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="身份证识别"
                            android:textColor="#363636"
                            android:textSize="14sp"></TextView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/bankcard_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/ic_bank_card_ocr"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="银行卡识别"
                            android:textColor="#363636"
                            android:textSize="14sp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/general_webimage_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/ic_network_picture_character_ocr"
                            tools:ignore="HardcodedText" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="网络图片\n文字识别"
                            android:textColor="#363636"
                            android:textSize="14sp"></TextView>
                    </LinearLayout>

                </TableRow>

                <TableRow>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/vehicle_license_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/ic_drive_license_ocr"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="行驶证识别"
                            android:textColor="#363636"
                            android:textSize="14sp"></TextView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/vat_invoice_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/ic_value_add_tax_ocr"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="增值税发票识别"
                            android:textColor="#363636"
                            android:textSize="14sp"></TextView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/business_license_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/ic_business_license"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="营业执照识别"
                            android:textColor="#363636"
                            android:textSize="14sp"></TextView>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/general_enhance_button"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="通用文字识别（含生僻字版）"
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />


                </TableRow>

                <TableRow>

                    <ImageView
                        android:id="@+id/lottery_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="彩票识别"
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/business_card_button"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="名片识别"
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/qrcode_button"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="二维码识别"
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/accurate_basic_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="通用文字识别(高精度版)"
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/numbers_button"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="数字识别"
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/general_button"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="通用文字识别（含位置信息版）"
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/accurate_button"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="通用文字识别(高精度含位置信息版)"
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />


                    <ImageView
                        android:id="@+id/driving_license_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="驾驶证识别"
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />

                    <TableRow>


                        <ImageView
                            android:id="@+id/license_plate_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="车牌识别"
                            android:visibility="gone"
                            tools:ignore="HardcodedText" />

                        <ImageView
                            android:id="@+id/receipt_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="通用票据识别"
                            android:visibility="gone"
                            tools:ignore="HardcodedText" />
                    </TableRow>

                    <TableRow android:visibility="gone">
                        <!--    useless-->


                        <ImageView
                            android:id="@+id/custom_button"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="自定义模板识别"
                            android:visibility="visible"
                            tools:ignore="HardcodedText" />

                    </TableRow>
                </TableRow>

                <TableRow android:visibility="gone">

                </TableRow>


                <TableRow>

                    <ImageView
                        android:id="@+id/passport_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="护照识别"
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />
                </TableRow>

                <TableRow>

                </TableRow>
            </TableLayout>

        </LinearLayout>

    </ScrollView>


    <FrameLayout
        android:id="@+id/fl_login_now"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="#B3000000"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:text="登录可使用更多功能，赶快去登录吧！"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_login_now"
            android:layout_width="66dp"
            android:layout_height="22dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_bg_loging_now"
            android:gravity="center"
            android:text="马上登录"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </FrameLayout>


</LinearLayout>
